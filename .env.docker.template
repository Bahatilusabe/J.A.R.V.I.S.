# Docker Environment Configuration for J.A.R.V.I.S. with MindSpore
# Copy this to .env.docker and populate with your values
# Used by: docker-compose.mindscore.yml

# ============================================================================
# PQC Cryptography Configuration
# ============================================================================

# Post-quantum cryptography keys (base64 encoded)
# Generate with: python3 -c "import base64; from backend.core.pqcrypto.key_manager import PQCKeyManager; km = PQCKeyManager(); print(km.get_keys())"
PQC_SK_B64=
PQC_PK_B64=

# API HMAC secret key (for token verification)
API_HMAC_KEY=

# PQC Settings
PQC_ENABLED=true
PQC_KEY_ROTATION_DAYS=30
PQC_SESSION_TIMEOUT=3600

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL
POSTGRES_USER=jarvis
POSTGRES_PASSWORD=jarvis_secure
POSTGRES_DB=jarvis_pqc
DATABASE_URL=postgresql://jarvis:jarvis_secure@postgres:5432/jarvis_pqc

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=jarvis_redis_pass

# ============================================================================
# Application Settings
# ============================================================================

# Python settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Flask/Uvicorn settings
DEBUG=false
ENV=production

# CORS Configuration
DEV_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# MindSpore Configuration
# ============================================================================

# MindSpore backend
MINDSPORE_DEVICE_TARGET=CPU
# Other options: GPU, Ascend, CPU
MINDSPORE_DEVICE_ID=0

# ============================================================================
# Telemetry Configuration (optional)
# ============================================================================

TELEMETRY_ENABLED=false
TELEMETRY_BACKEND=kafka
# TELEMETRY_KAFKA_BROKERS=kafka:9092
# TELEMETRY_KAFKA_TOPIC=jarvis-telemetry

# ============================================================================
# Optional: mTLS Configuration
# ============================================================================

# JARVIS_MTLS_REQUIRED=false
# JARVIS_MTLS_ALLOWED_FINGERPRINTS=

# ============================================================================
# Optional: pgAdmin Configuration (for database management)
# ============================================================================

PGADMIN_DEFAULT_EMAIL=admin@jarvis.local
PGADMIN_DEFAULT_PASSWORD=pgadmin_pass
